<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_photo_vertical_margin"
    android:paddingLeft="@dimen/activity_photo_horizontal_margin"
    android:paddingRight="@dimen/activity_photo_horizontal_margin"
    android:paddingTop="@dimen/activity_photo_vertical_margin"
    tools:context="ru.test.ya.test6.CameraActivity">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_gravity="left|top"
        android:alpha="50" />

</FrameLayout>
